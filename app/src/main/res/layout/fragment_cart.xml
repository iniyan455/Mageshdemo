<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_Container"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.CartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/order_reference_button"
            android:focusableInTouchMode="true"
            android:hint="@string/order_reference"
            android:paddingTop="10dp"
            android:inputType="text|number"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textAllCaps="true"
            android:textColorHint="@android:color/black"
            android:textSize="15sp"
            app:fontFamily="@font/roboto" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/order_reference_button"
            android:focusableInTouchMode="true"
            android:hint="@string/lens_type1"
            android:paddingTop="10dp"
            android:inputType="text|number"
            android:paddingStart="30dp"

            android:paddingEnd="0dp"

            android:textAllCaps="true"
            android:textColorHint="@android:color/black"
            android:textSize="15sp"
            app:fontFamily="@font/roboto" />

        <Spinner
            android:id="@+id/spinner1"
            style="@style/spinner_style_fill"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner2"
            style="@style/spinner_style_fill"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape">

            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:layout_centerVertical="true"
                android:textAllCaps="true"
                android:textColor="@color/button_text"
                android:textSize="15sp"
                app:fontFamily="@font/roboto" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/search_1" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>